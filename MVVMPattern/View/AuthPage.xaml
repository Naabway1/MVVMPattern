<Page x:Class="MVVMPattern.View.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVVMPattern.View" xmlns:viewmodel="clr-namespace:MVVMPattern.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainVM}"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="AuthPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Авторизация" FontSize="100" FontFamily="Arial" Margin="10"/>
            <TextBox Text="{Binding Login, Mode=TwoWay}" Width="150" Height="30" FontSize="18" Margin="10"/>
            <TextBox Text="{Binding Password, Mode=TwoWay}" Width="150" Height="30" FontSize="18" Margin="10"/>
            <Button Command="{Binding AuthCommand}" Content="Войти" Width="150" Height="30" FontSize="18" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
